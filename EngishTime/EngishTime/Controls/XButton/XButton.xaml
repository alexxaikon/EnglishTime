<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EngishTime.Controls.XButton">
  <ContentView.Content>
        <AbsoluteLayout>
            <Button BackgroundColor="#EDE7F6"  BorderRadius="65" AbsoluteLayout.LayoutBounds="0, 0, 80, 80" AbsoluteLayout.LayoutFlags="None" Clicked="ButtonClick"/>
            <Image x:Name="ImageForButton"  AbsoluteLayout.LayoutBounds="20, 20, 40, 40" AbsoluteLayout.LayoutFlags="None" />
            <Button BackgroundColor="Transparent"  BorderRadius="65" AbsoluteLayout.LayoutBounds="20, 20, 40, 40" AbsoluteLayout.LayoutFlags="None" Clicked="ImageClick"/>
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>