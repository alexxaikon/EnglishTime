<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EngishTime.Pages.WriteTheWord.WriteTheWord"
             Title="CarouselPage">
  <ContentPage>

        <AbsoluteLayout>
            <Label Text="Write the correct meaning" TextColor ="#673AB7" BackgroundColor="Transparent" HorizontalTextAlignment="Center" FontSize="Medium" AbsoluteLayout.LayoutBounds=".5, .035" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Label Text="Dinner" TextColor ="#673AB7" BackgroundColor="Transparent" HorizontalTextAlignment="Center" FontSize="Large" AbsoluteLayout.LayoutBounds=".5, .25" AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <StackLayout Spacing="8" AbsoluteLayout.LayoutBounds=".5, .6" AbsoluteLayout.LayoutFlags="PositionProportional">
                <Entry x:Name="checkWordEntry" HeightRequest="50" WidthRequest="200" Text="" Placeholder="New Word" TextColor="#673AB7" PlaceholderColor="#9575CD"/>
                <BoxView BackgroundColor="Transparent" HeightRequest="40"/>
                <Button x:Name="checkButton" Text = "Save" BackgroundColor="#673AB7" TextColor="White" BorderRadius="8"  BorderWidth="1" HeightRequest="40" WidthRequest="180" HorizontalOptions="Center"/>
            </StackLayout>
        </AbsoluteLayout>

    </ContentPage>
</CarouselPage>